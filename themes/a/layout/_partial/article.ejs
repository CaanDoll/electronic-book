<article id="<%= post.layout %>-<%= post.slug %>"
  class="article white-box article-type-<%= post.layout %>"
  itemscope itemprop="blogPost">

  <header class="article-header">
    <h1 class="article-title" itemprop="name">
      <%= post.sec %> <%= post.title %>
    </h1>
    <div class="article-meta">
      发表于
      <time class="article-time" datetime="<%= date_xml(post.date) %>" itemprop="datePublished">
        <%= date(post.date, "YYYY , MMM D") %>
      </time>
    </div>
  </header>

  <div class="article-entry" itemprop="articleBody">
    <%- post.content %>
  </div>
  
  <div class="article-tags">
    <% if (post.tags && post.tags.length){ %>
      <%- list_tags(post.tags, {
        show_count: false,
        style: 'none',
        separator: ''
      }) %>
    <% } %>
  </div>

  <div class="post-nav">
    <% if (post.next){ %>
      <div class="post-nav-prev post-nav-item">
          <a href="<%- url_for(post.next.path) %>" >上一篇：<%= post.next.title %><span class="icon icon-chevron-left"></span></a>
      </div>
    <% } %>
    <% if (post.prev){ %>
      <div class="post-nav-next post-nav-item">
          <a href="<%- url_for(post.prev.path) %>" >下一篇：<%= post.prev.title %><span class="icon icon-chevron-right"></span></a>
      </div>
    <% } %>
  </div>

  <% if (post.comments && (theme.disqus_shortname || theme.valine.enable || config.disqus_shortname)){ %>
  <section id="comments" class="white-box">
    <% if (theme.disqus_shortname || config.disqus_shortname){ %>
      <div id="disqus_thread">
        <noscript>Please enable JavaScript to view the <a href="//disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
      </div>
    <% } %>
	</section>
	<% } %>

</article>
